@page
@model WebApp.Pages_Games.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Game</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            Game Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game!.Name)
        </dd>
        <dt class="col-sm-2">
            Game Turns
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game!.TurnSaves!.Count)
        </dd>
        <dt class="col-sm-2">
            Game Started At
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game!.CreatedDateTime)
        </dd>
        <dt class="col-sm-2">
            Players Count
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game!.GameBoards!.Count)
        </dd>
        <dt class="col-sm-2">
            Board Width
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game!.GameOption!.BoardWidth)
        </dd>
        <dt class="col-sm-2">
            Board Height
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game!.GameOption!.BoardHeight)
        </dd>
        <dt class="col-sm-2">
            Boats touching
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game!.GameOption!.EBoatsCanTouch)
        </dd>
        <dt class="col-sm-2">
            Who plays after hit
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game!.GameOption!.ENextMoveAfterHit)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Game!.GameId"/>
        <input type="submit" value="Delete" class="btn btn-danger"/> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>