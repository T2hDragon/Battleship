@page
@model WebApp.Pages_Games.IndexModel

@{
    ViewData["Title"] = "Index";
}


<h1>Games</h1>
<br>
<table class="table">
    <thead>
    <tr>
        <th>
            Game Name
        </th>
        <th>
            Player Count
        </th>
        <th>
            Game Created At
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Games!)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameBoards!.Count)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDateTime)
            </td>
            <td>
                <a asp-page-handler="LoadGame" asp-route-gameId="@(item.GameId)">Load</a> |
                <a asp-page="./Details" asp-route-id="@item.GameId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.GameId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>